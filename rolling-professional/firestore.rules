rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow uploads under crowd/uploads/<uid>/...
    match /crowd/uploads/{uid}/{allPaths=**} {
      allow write: if request.auth != null
                   && request.auth.uid == uid
                   && request.resource.size < 20 * 1024 * 1024
                   && request.resource.contentType.matches(
                     'text/.*|application/pdf|application/msword|application/vnd\\.openxmlformats-officedocument\\.wordprocessingml\\.document|application/vnd\\.openxmlformats-officedocument\\.spreadsheetml\\.sheet|application/vnd\\.ms-excel|text/csv|application/json'
                   );
      // Optional: restrict reads to the owner
      allow read: if request.auth != null && request.auth.uid == uid;
    }

    
    // Deny everything else
    match /{all=**} { allow read, write: if false; }
  }
}
